<%= simple_form_for(@restaurant) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.select :category, Restaurant::CATEGORY, input_html: { class: "dropdown-menu" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary mt-3" %>
  </div>
<% end %>
