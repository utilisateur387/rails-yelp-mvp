<h1>Write review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>

  <div class="form-inputs">
    <%= f.select :rating, Review::RATING %>
    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary mt-3" %>
  </div>
<% end %>

<%= link_to "Back", restaurant_path(@restaurant) %>
